[core]
    editor = vim
    pager = less -X
	autocrlf = input
	safecrlf = true

[merge]
    tool = vimdiff

[color]
    diff = yes
    status = yes
    branch = yes
    interactive = yes
    grep = yes
    hist = yes

[status]
    showuntrackedfiles = no

[push]
	default = current

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%Cred%h %C(yellow)%cr%Creset %s%Cred%d %Cblue(%an)\"
    type = cat-file -t
    dump = cat-file -p
    ss = show --stat
    s = show
    f = fetch
    g = grep
[user]
	email = jukka.nousiainen@gmail.com
	name = Jukka Nousiainen
[credential]
	helper = store
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[rebase]
	autosquash = true
